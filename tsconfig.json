{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "CommonJS",
    "lib": [
      "es6",
      "es7",
      "esnext"
    ],
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**/*"]
}
